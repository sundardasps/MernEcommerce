<%- include("../admin/layouts/admin_header.ejs") %>
    <div class="main-panel">
        <div class="content-wrapper">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Products List</h4>
                        <!-- <p class="card-description"> Add class <code>.table-dark</code> -->
                        </p>
                        <div class="table-responsive" >
                            <div class="card-title">
                                <a href="./add_products">
                                    <button type="button" class="btn btn-success btn-md">Add</button>
                                </a>
                            </div>
                            <table class="table table-dark">
                                <thead>
                                    <tr>
                                        <th> Name </th>
                                        <th> Price</th>
                                        <th>Product</th>
                                        <th> Category </th>
                                        <th> Stock Status </th>
                                        <th> Stock Quantity </th>
                                        <th> Stock Actions </th>
                                     
                                    

                                    </tr>
                                </thead>
                                <% data.forEach((data,index)=>{%>

                                    <tbody>
                                        <tr>
                                            <td style="color: aliceblue;">
                                                <%= data.name %>
                                            </td>
                                            <td style="color: aliceblue;">
                                                Rs:<%= data.price %>
                                            </td>
                                            <td>
                                                <img src="/adminassets/productImages/<%=data.productImages[0] %>" alt="">
                                            </td>
                                            <td style="color: aliceblue;">
                                                <%= data.category %>
                                            </td>
                                            <td style="color: aliceblue;" >
                                                <%= data.quantity %>
                                             
                                            </td>
                                            <td style="color: aliceblue;">
                                                <%= data.stock %>
                                            </td>
                                            <td>
                                                <div class="card-title">
                                                    <a href="/admin/product_details?id=<%= data._id %> ">
                                                        <button type="button"
                                                            class="btn btn-success btn-md">Details</button>
                                                    </a>
                                                </div>
                                            </td>
                                            <td>
                                                <div class="card-title">
                                                    <a href="/admin/product_delete?id=<%= data._id %>">
                                                        <button type="button"
                                                            class="btn btn-outline-danger btn-icon-text" onclick="return confirm('Are you sure you want to Delete    <%= data.name %>?')">
                                                            Delete </button>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                        <%})%>
                                    </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
<%- include("../admin/layouts/admin_footer.ejs") %>
