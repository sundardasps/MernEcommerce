<%- include("../admin/layouts/admin_header.ejs") %>
  <div class="main-panel">
    <div class="content-wrapper">
      <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
          <div class="card-body">
   
            <h4 class="card-title">Category List</h4>
            <!-- <p class="card-description"> Add class <code>.table-dark</code> -->
            </p>
            <div class="table-responsive">
              <div class="card-body">
              <a href="./add_category">
                <button type="button" class="btn btn-success btn-md">Add</button>
              </a>
            </div>
              <table class="table table-dark">
                <thead>
                  <tr>
                    <%if(catData.length>0){%>
                      <th style="font-size: large;"> Number </th>
                      <th style="font-size: large;"> Category Name </th>
                      <th style="font-size: large;"> Edit </th>
                      <th style="font-size: large;"> Active </th>
                  </tr>
                </thead>
                <tbody>
                  <% catData.forEach((data,i)=>{ %>
                    <tr>
                      <td style="color: aliceblue;">
                        <%= i + 1 %>
                      </td>
                      <td style="color: aliceblue;">
                        <%= data.name %>
                      </td>     
                     <td><a href= "/admin/edit_category?id=<%= data._id %>" ><button type="button" class="btn btn-primary btn-sm" style="color: rgb(255, 255, 255);">Edit</button></a></td>
                     <td>
                      <% if( data.is_active === true){ %>
                        <a href="/admin/is_active?id=<%= data._id %>">
                      <button type="button" class="btn btn-success btn-md">Active</button></a>
                        <% }else{ %>
                          <a href="/admin/is_active?id=<%= data._id %>">
                            <button type="button" class="btn btn-outline-secondary btn-md">Inactive</button></a>
                          <%}%>
                     </td>
                    </tr>
                    <% })%>
                      <%}else{%>
                        <%}%>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- Button trigger modal -->


<%- include("../admin/layouts/admin_footer.ejs") %>
