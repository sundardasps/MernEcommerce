<%- include("../admin/layouts/admin_header.ejs") %>
    <div class="main-panel">
        <div class="content-wrapper">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Orders List</h4>
                        <!-- <p class="card-description"> Add class <code>.table-dark</code> -->
                        </p>
                        <div class="table-responsive" >
                            <table class="table table-dark">
                                <thead>
                                    <tr>
                                        <th> No </th>
                                        <th> Order ID</th>
                                        <th>Order Date</th>
                                        <th> Payment</th>
                                        <th> Status </th>
                                        <th> View</th>

                                    </tr>
                                </thead>
                                    <tbody>
                                        <% if(orders.length > 0) {
                                            orders.forEach((orders, index) => { %>
                                        <tr>
                                            <td style="color: aliceblue;">
                                                <%= index +1 %>
                                            </td>
                                            <td style="color: aliceblue;">
                                                <%= orders._id %>
                                            </td>
                                            <td>
                                               <%= orders.date.toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: '2-digit' }).replace(/\//g, '-') %>
                                            </td>
                                            <td style="color: aliceblue;">
                                                <%= orders.totalAmount%>
                                            </td>
                                            <td style="color: aliceblue;" >
                                                <%= orders.paymentMethod %>
                                             
                                            </td>
                                            <td style="color: aliceblue;">
                                                <%= orders.status %>
                                            </td>
                                            <td>
                                                <div class="card-title">
                                                    <a href="./orderFullDetails?id=<%= orders._id %>">
                                                        <button type="button"
                                                            class="btn btn-success btn-md">Details</button>
                                                    </a>
                                                </div>
                                            </td>
                                            <td>
                                              
                                            </td>
                                        </tr>
                                        <% }) %>
                                        <%  }else{ %>
         
                                         <% }%>
                                    </tbody>
                            </table>
                             <!-- Button trigger modal -->


   </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
 
<%- include("../admin/layouts/admin_footer.ejs") %>
