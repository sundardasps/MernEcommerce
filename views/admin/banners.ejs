<%- include("../admin/layouts/admin_header.ejs") %>
  <div class="main-panel">
    <div class="content-wrapper">
      <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
          <div class="card-body">
   
            <h4 class="card-title">Category List</h4>
            <!-- <p class="card-description"> Add class <code>.table-dark</code> -->
            </p>
            <div class="table-responsive">
              <div class="card-body">
             
            <button type="button" class="btn btn-success btn-md"   data-toggle="modal" data-target="#exampleModal" data-whatever="@mdo">Add</button>
              
            </div>
              <table class="table table-dark">
                <thead>
                  <tr>
                  
                      <th style="font-size: large;"> Number </th>
                      <th style="font-size: large;"> Category Name </th>
                      <th style="font-size: large;"> Edit </th>
                      <th style="font-size: large;"> Active </th>
                  </tr>
                </thead>
                <tbody>
               <%  if (banners.length > 0){
                     banners.forEach( (banner)=>{ %>
                      
                    <tr>
                      <td style="color: aliceblue;">
                        <img src="/adminassets/imags/<%= banner.bannerimage %>" alt="">
                       </td>
                      <td style="color: aliceblue;">
                       <%= banner.title  %>
                      </td>
                      <td style="color: aliceblue;">
                        <%= banner.description  %>
                      </td>     
                     <td><a href= "" ><button type="button" class="btn btn-primary btn-sm" style="color: rgb(255, 255, 255);">Edit</button></a></td>
                     <td>
                     
                        <a href="">
                      <button type="button" class="btn btn-success btn-md">Active</button></a>
                      
                          <a href="">
                            <button type="button" class="btn btn-outline-secondary btn-md">Inactive</button></a>
                        
                     </td>
                    </tr>
                  <% }) %>
                  <% }else{ %>
                  <% } %>


                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- Button trigger modal -->

 
  
  <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">New message</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <form action="/admin/addbanners"  method="post"   enctype="multipart/form-data">
            <div class="form-group">
              <label for="recipient-name" class="col-form-label">Banner name:</label>
              <input type="text" name="title" class="form-control" id="recipient-name">
              
            </div>
            <div class="form-group">

              <label>File upload</label>
              <div class="input-group col-xs-12">
                <input type="file" data-name="Product images"  placeholder="Upload Image" name="image" id="exampleInputEmail1">
              
              </div>
              
            </div>
            <div class="form-group">
              <label for="recipient-name" class="col-form-label">Description:</label>
              <input type="text"  name="description" class="form-control" id="recipient-name">
            </div>

              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-primary">Send message</button>
              </div>
         
          </form>
        </div>
       
      </div>
    </div>
  </div>

  <script>



  </script>

