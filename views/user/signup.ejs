  <script>

    const name = document.getElementById("name")
    const email = document.getElementById("email")
    const number = document.getElementById("number")
    const password = document.getElementById('password')
  
  
    //User name
    name.addEventListner('input', () => {
      if (name.value.trim().length < 3) {
        name.setCustomValidity("mininum 3 characters are Requierd !");
      } else {
        name.setCustomValidity("")
      }
    })
  
    //Mobile number
    number.addEventListner('input', () => {
      if (number.value.trim().length == '') {
        number.setCustomValidity('Mobile number required');
      } else if (number.value.trim().length < 10) {
        number.setCustomValidity("Mobile number  must requied 10 Numbers ");
      } else if (number.value.trim().length > 10) {
        number.setCustomValidity('Mobile Number greater than 10')
      } else {
        number.setCustomValidity("");
      }
    })
  
    //password
    password.addEventListener('inpur', () => {
      if (password.value.trim().length == '') {
        password.setCustomValidity('Please Enter Your Password !');
      } else if (password.value.trim().length < 8) {
        password.setCustomValidity('Minimum 8 Characters Requierd');
      } else {
        password.setCustomValidity("");
      }
    })
  </script>
  
